#:kivy 2.1.0


<WoWShuffler>:
    id: wowshuffler
    orientation: 'vertical'
    padding: 20

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.heading.text
            font_size: 45
        GridLayout:
            cols: 2
            rows: 2
            Button:
                text: str('a)')
                font_size: 30
                size_hint_x: 0.5
                text_size: self.size
                valign: 'center'
                halign: 'center'
                on_press: root.manager.current = 'shuffling'
                on_press: app.shuffler.mode = 'a'
            Label:
                text: str('Devout must be unique')
                font_size: 30
            Button:
                text: str('b)')
                font_size: 30
                size_hint_x: 0.5
                text_size: self.size
                valign: 'center'
                halign: 'center'
                on_press: root.manager.current = 'shuffling'
                on_press: app.shuffler.mode = 'b'
            Label:
                text: str(' Devout and Opposed must be unique')
                font_size: 30

<ShufflingScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.player_label.text
            font_size: 45
        Label:
            text: root.next_player_label.text
            font_size: 30
        Label:
            text: root.order_label.text
            font_size: 45
        BoxLayout:
            Button:
                text: root.next_player_btn.text
                disabled: True if app.shuffler.current_player_index == 3 else root.next_player_btn.disabled
                on_press: root.update(app.shuffler.get_current_player(), app.shuffler.get_next_player())
                on_press: app.shuffler.current_shuffle.clear()
                on_press: app.shuffler.change_player()
                on_press: app.shuffler.commit_shuffle()
            Button:
                text: 'Shuffle'
                on_press: root.update(app.shuffler.get_current_player(), app.shuffler.get_next_player(), f"{' || '.join(app.shuffler.current_shuffle)}")
                on_press: app.shuffler.current_shuffle = app.shuffler.get_empires_order()
                on_press: root.enable_btn('next_player_btn')
            Button:
                text: 'Back to menu'
                on_press: root.manager.current = 'menu'
                on_press: root.next_player_btn.disabled = True
                on_press: root.player_label.text = "Current player: Raven"
                on_press: root.order_label.text = "Shuffle the loyalty tokens!"
                on_press: app.shuffler.reset_properties()
